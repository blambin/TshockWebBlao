<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="mapper.IUserMapping" >
	<select id="login" resultType="entity.User"
		parameterType="entity.User">
		select * from user where username=#{userName} and password=#{password}
	</select>
	
	<select id="queryUserNameCount" resultType="int" parameterType="entity.User">
	   select count(*) from user where username=#{userName}
	</select>
		
	<insert id="saveUser"   parameterType="entity.User" >
	    insert into user(displayname,username,password) values(#{displayName},#{userName},#{password})
	</insert>
	
</mapper>
